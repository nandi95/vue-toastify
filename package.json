{
    "name": "vue-toastify",
    "version": "2.0.1",
    "license": "MIT",
    "type": "module",
    "author": "Nandor Kraszlan",
    "scripts": {
        "dev": "vite",
        "build:demo": "vite build",
        "serve": "vite preview",
        "lint": "eslint . --fix --ext .ts,.vue,.tsx",
        "build:lib": "vite build --mode=library && tsc -p tsconfig.build.json"
    },
    "module": "dist/index.mjs",
    "main": "dist/index.cjs",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/types/src/index.d.ts"
        },
        "./useToast": {
            "import": "./dist/useToast.mjs",
            "require": "./dist/useToast.cjs",
            "types": "./dist/types/src/composables/useToast.d.ts"
        },
        "./useVtEvents": {
            "import": "./dist/useVtEvents.mjs",
            "require": "./dist/useVtEvents.cjs",
            "types": "./dist/types/src/composables/useVtEvents.d.ts"
        },
        "./useVtSetting": {
            "import": "./dist/useVtEvents.mjs",
            "require": "./dist/useVtEvents.cjs",
            "types": "./dist/types/src/composables/useSetting.d.ts"
        },
        "./index.css": "./dist/index.css",
        "./themes/dark.css": "./dist/themes/dark.css",
        "./themes/light.css": "./dist/themes/light.css"
    },
    "types": "dist/types/src/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nandi95/vue-toastify.git"
    },
    "dependencies": {
        "vue": "^3.0.11"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-typescript": "^11.0.0",
        "@stylistic/eslint-plugin-ts": "^2.8.0",
        "@tailwindcss/forms": "^0.5.3",
        "@typescript-eslint/eslint-plugin": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "@vitejs/plugin-vue": "^5.1.3",
        "@vue/compiler-sfc": "^3.0.5",
        "@vue/eslint-config-typescript": "^13.0.0",
        "autoprefixer": "^10.2.5",
        "daisyui": "^4.12.10",
        "eslint": "^8.24.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-vue": "^9.5.1",
        "postcss": "^8.2.8",
        "rollup": "^4.21.2",
        "rollup-plugin-vue": "^6.0.0",
        "sass": "^1.78.0",
        "tailwindcss": "^3.1.8",
        "typescript": "^5.0.2",
        "vite": "^5.4.6",
        "vite-plugin-static-copy": "^1.0.6",
        "vue-router": "^4.1.6"
    },
    "keywords": [
        "vue",
        "toast",
        "notification",
        "vue3",
        "alert",
        "vue-toastify",
        "vue-toast",
        "snackbar",
        "toast-notification",
        "notice",
        "toastify",
        "toast-component",
        "toast-plugin",
        "toastify-component",
        "vue-notification"
    ]
}
